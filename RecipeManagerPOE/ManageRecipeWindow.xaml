<Window x:Class="RecipeManagerPOE.ManageRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Recipe" Height="450" Width="800">
    <Grid>
        <Label Content="Recipe Name:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        <TextBox x:Name="RecipeNameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="100,10,0,0" IsReadOnly="True"/>

        <Label Content="Ingredients:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0"/>
        <ListBox x:Name="IngredientsListBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Height="100" Margin="10,70,0,0"/>

        <Label Content="Steps:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,180,0,0"/>
        <ListBox x:Name="StepsListBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Height="100" Margin="10,200,0,0"/>

        <Button x:Name="CloseButton" Content="Close" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="75" Margin="0,0,10,10" Click="CloseButton_Click"/>
    </Grid>
</Window>
