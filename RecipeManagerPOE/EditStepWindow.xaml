<Window x:Class="RecipeManagerPOE.EditStepWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Step" Height="300" Width="400">
    <Grid>
        <Label Content="Step Description:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="StepTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Height="179" Margin="10,40,0,0"/>

        <Button Content="Save" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="10,230,0,0" Click="SaveButton_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="120,230,0,0" Click="CancelButton_Click"/>
    </Grid>
</Window>

