<Window x:Class="RecipeManagerPOE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recipe Manager" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="RecipesListBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Height="200" Margin="10,40,0,0"
         DisplayMemberPath="Name"/>
        <Button x:Name="AddRecipeButton" Content="Add Recipe" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="320,10,0,0" Click="AddRecipeButton_Click"/>
        <Button x:Name="DisplayRecipeButton" Content="Display Recipe" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="320,50,0,0" Click="DisplayRecipesButton_Click"/>
        <Button x:Name="ManageRecipeButton" Content="Manage Recipe" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="320,90,0,0" Click="ManageRecipeButton_Click"/>
        <Button x:Name="ExitButton" Content="Exit" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="320,130,0,0" Click="ExitButton_Click"/>
        <TextBox x:Name="SearchTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,220,0,0"/>
        <Label Content="Search by Name:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,200,0,0"/>
    </Grid>
</Window>