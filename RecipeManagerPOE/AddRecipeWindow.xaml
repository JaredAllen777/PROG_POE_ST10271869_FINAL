<Window x:Class="RecipeManagerPOE.AddRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Recipe" Height="450" Width="400">
    <Grid>
        <Label Content="Recipe Name:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-1"/>
        <TextBox x:Name="RecipeNameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,20,0,0"/>
        <Button Content="Add Ingredient" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="10,50,0,0" Click="AddIngredientButton_Click"/>
        <Button Content="Add Step" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="120,50,0,0" Click="AddStepButton_Click"/>
        <Button Content="Save" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="10,80,0,0" Click="SaveButton_Click"/>
        <ListBox x:Name="IngredientsListBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="100" Margin="10,110,0,0"/>
        <ListBox x:Name="StepsListBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="100" Margin="10,220,0,0"/>
    </Grid>
</Window>

