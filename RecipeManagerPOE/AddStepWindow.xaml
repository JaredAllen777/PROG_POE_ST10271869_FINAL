<Window x:Class="RecipeManagerPOE.AddStepWindow"
        
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Step" Height="300" Width="400">
    <Grid>
        <Label Content="Step:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        <TextBox x:Name="StepTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Margin="10,20,0,0"/>
        <Button Content="Save" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="10,50,0,0" Click="SaveButton_Click"/>
    </Grid>
</Window>